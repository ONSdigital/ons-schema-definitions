{
  "env": {
    "node": true,
    "es6": true
  },
  "extends": ["standard", "eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 12,
    "ecmaFeatures": {
      "modules": true
    }
  },
  "plugins": ["json"],
  "rules": {
    "consistent-return": 1,
    "indent": [
      2,
      2,
      {
        "SwitchCase": 1
      }
    ],
    "comma-dangle": 0,
    "new-cap": 2,
    "no-alert": 1,
    "no-console": 0,
    "no-dupe-class-members": 0,
    "no-unused-expressions": 0,
    "no-var": 2,
    "prefer-arrow-callback": [
      2,
      {
        "allowNamedFunctions": false
      }
    ],
    "quotes": [
      2,
      "double",
      {
        "avoidEscape": true,
        "allowTemplateLiterals": true
      }
    ],
    "semi": [2, "always"],
    "space-before-function-paren": 0,
    "padded-blocks": [
      "error",
      {
        "blocks": "never"
      }
    ]
  }
}
